{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-fluid">
    <div class='row'>
        <h3>{{ title }} </h3>
    </div>

    <div class="row table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Country</th>
                    <th scope="col">Price</th>
                    <th scope="col">Locale</th>
                    <th scope="col">VAT</th>
                    <th scope="col">Gross Price</th>
                </tr>
            </thead>
            <tbody>
                {% for result in results %}
                <tr>
                    <td>{{result.product}}</td>
                    <td>{{result.description}}</td>
                    <td>{{result.category}}</td>
                    <td>{{result.country}}</td>
                    <td>{{result.price}}</td>
                    <td>{{result.locale}}</td>
                    <td>{{result.vat}}</td>
                    <td>{{ result.gross_price | round(2, 'floor') }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="container fluid">
    <div class="row">
        <div class="col-2">
                <label for='product_dropdown'>Products</label>
                <select name='' id='product_dropdown'>
                    <option value="" selected>No filter</option>
                    {% for product in products %}
                    <option value='{{ product.id }}'>
                        {{ product.name }}
                    </option>
                    {% endfor %}
                </select>
                
        </div>
        <div class="col-2">
                <label for='locale_dropdown'>Locales</label>
                <select name='' id='locale_dropdown'>
                    <option value="" selected>No filter</option>
                    {% for locale in locales %}
                    <option value='{{ locale.id }}'>
                        {{ locale.iso1 }}
                    </option>
                    {% endfor %}
                </select>
                
        </div>
    </div>
</div>

{% endblock %}